<head><h2>Welcome, <%=@user.name%>!</hr></head>
<body>
<form method="post" action="/user/vacation/:id">
            <h3>Add a new vacation here!</h3>
            <p>Title: <input type="text" id="title" name="title" placeholder="Titty"></p>
            <p>Location: <input type="text" id="location" name="location" placeholder="Location"></p>
            <p>Date: <input type="date" id="date" name="date"></p>
            <textarea id="description" id="description" name="description" rows="4" cols="50" placeholder=" Description"></textarea><br/>
            <button type="submit">Add Vacation</button><br/><br/>
</form>
<h1> Your Vacations </h1>
<% @vacations.each do |v| %>
    <a href="/user/vacation/<%= v.id %>"><%= v.title %></a>
<% end %>

<% #put list of existing user vacations here with clickable links to each %>
</body>


